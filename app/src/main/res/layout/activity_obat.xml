<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background"
    tools:context=".ObatActivity">

    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Data Obat"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFF"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kode Obat"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/kodeobt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Kode"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Obat"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/namaobt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nama"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Obat"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/jenisobt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Jenis"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Golongan Obat"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/golonganobt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Hijau, Biru, dan Merah"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stok Obat"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/stokobt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Jumlah"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:text="TAMBAH"
            android:padding="10dp"
            android:textColor="#2B3467"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btntampil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAMPIL"
            android:padding="10dp"
            android:background="@drawable/button2"
            android:textColor="#2B3467"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:padding="10dp"
            android:background="@drawable/button2"
            android:textColor="#2B3467"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnhapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAPUS"
            android:padding="10dp"
            android:background="@drawable/button2"
            android:textColor="#2B3467"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
</LinearLayout>